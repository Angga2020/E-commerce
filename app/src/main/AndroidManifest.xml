<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stores">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:requestLegacyExternalStorage="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/detail_name"
            android:name=".UI.Stores.DetailStore"/>
    <activity
        android:label="@string/add_name"
        android:name=".UI.Stores.AddStore"/>
    <activity
        android:label="@string/edit_name"
        android:name=".UI.Stores.UpdateStore"/>
        <activity
            android:label="@string/app_name_product"
            android:name=".MainActivityProduct"/>
        <activity
            android:label="@string/add_name_product"
            android:name=".UI.Products.AddProduct"/>
        <activity
            android:label="@string/detail_name_product"
            android:name=".UI.Products.DetailProduct"/>
        <activity
            android:label="@string/edit_name_product"
            android:name=".UI.Products.EditProduct"/>
    </application>

</manifest>